{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build BusBus solution",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build",
                "BusBus.sln"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "clear": false
            },
            "problemMatcher": {
                "owner": "csharp",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.*)\\((\\d+),(\\d+)\\):\\s+(error|warning|info)\\s+(CS\\d+):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "code": 5,
                    "message": 6
                }
            }
        }
    ]
}
